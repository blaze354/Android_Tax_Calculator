<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="598dp"
        android:layout_height="692dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:id="@+id/TitleTxt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="0.03"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="54sp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/EnterPriceTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:ems="10"
            android:hint="@string/hint_message"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            android:textSize="44sp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="78dp"

            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="227dp"
            android:stretchColumns="*"
            android:layout_weight="0.01">


            <TableRow
                android:id="@+id/Row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/GstTxt"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"

                    android:text="@string/gst_tax"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="160dp" />

                <EditText
                    android:id="@+id/GstOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="42sp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="449dp" />

            </TableRow>

            <TableRow
                android:id="@+id/Row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/QstTxt"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"

                    android:text="@string/qst_tax"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="220dp" />

                <EditText
                    android:id="@+id/QstOut"
                    android:layout_width="@android:dimen/dialog_min_width_major"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="none"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textSize="42sp"
                    tools:layout_editor_absoluteX="183dp"
                    tools:layout_editor_absoluteY="160dp" />

            </TableRow>

            <TableRow
                android:id="@+id/Row3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TotalTax"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"

                    android:text="@string/total_tax"
                    android:textAlignment="center"
                    android:textSize="42sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="160dp" />

                <EditText
                    android:id="@+id/TaxOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="42sp"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="449dp" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/TotalTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:text="@string/total"
            android:textAlignment="center"
            android:textSize="62sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="371dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/TotalOut"
        android:layout_width="588dp"
        android:layout_height="112dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1.70"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="691dp" />
</android.support.constraint.ConstraintLayout>