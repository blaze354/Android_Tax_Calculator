<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="zlysoftware.quebectaxcalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="512dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/TitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/EnterPriceTxt"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:ems="10"
            android:hint="@string/hint_message"
            android:inputType="number|numberDecimal"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="78dp"

            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/Row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/GstTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:text="@string/gst_tax"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="160dp" />

                <EditText
                    android:id="@+id/GstOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="449dp" />

            </TableRow>

            <TableRow
                android:id="@+id/Row2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/QstTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_weight="1"
                    android:text="@string/qst_tax"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="220dp" />

                <EditText
                    android:id="@+id/QstOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="none"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="183dp"
                    tools:layout_editor_absoluteY="160dp" />

            </TableRow>

            <TableRow
                android:id="@+id/Row3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TotalTax"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_weight="1"
                    android:text="@string/total_tax"
                    android:textAlignment="textEnd"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="160dp" />

                <EditText
                    android:id="@+id/TaxOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:textAlignment="center"
                    tools:layout_editor_absoluteX="66dp"
                    tools:layout_editor_absoluteY="449dp" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/TotalTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textAlignment="center"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="371dp" />

        <EditText
            android:id="@+id/TotalOut"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="220dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
